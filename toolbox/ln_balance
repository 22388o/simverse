#!/usr/bin/env bash

set -e -o pipefail

source _toolbox_lib.sh

PERSON=${1:-alice}

FLAVOR=$(get_flavor "$PERSON")
case "$FLAVOR" in
  lnd)
    BALANCE=$("$PERSON" channelbalance | jq -r ".balance")
    if [[ -z "$BALANCE" ]]; then
      echo "-1"
    fi
    echo "$BALANCE" | sat2btc
    ;;
  lightning)
    "$PERSON" listfunds | jq '[.channels[].channel_sat] | add' | sat2btc
    ;;
  eclair)
    # for backward compatibility we add both toLocalMsat and toLocal
    # see https://github.com/ACINQ/eclair/commit/4929febbd11ebad6ae20caed4b161db44dfd263d
    "$PERSON" channels | jq '[.[].data.commitments.localCommit.spec.toLocal]+[.[].data.commitments.localCommit.spec.toLocalMsat] | add' | msat2btc
    ;;
  *) echo_err "unsupported flavor type '$FLAVOR' for '$PERSON'"; exit 1; ;;
esac